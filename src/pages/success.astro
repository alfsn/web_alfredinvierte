<style>
  .success-page {
    text-align: center;
    padding: 4rem 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .container {
    max-width: 600px;
    padding: 0 1rem;
  }
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--blue, #2189ce);
  }
  p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }
  .home-link {
    display: inline-block;
    background-color: var(--black, #1d1d1b);
    color: var(--white, #f4f8fb);
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    transition: background-color 0.3s;
  }
  .home-link:hover {
    background-color: #333;
  }
</style>
