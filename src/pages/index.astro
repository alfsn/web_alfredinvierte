---
import Layout from '../layouts/Layout.astro';
import fs from 'node:fs';
import path from 'node:path';

// --- LOGIC TO READ FILES ---
const alliesDir = path.join(process.cwd(), 'public', 'allies');
let partnerLogos: string[] = [];

try {
  // Check if directory exists first to avoid crashes during build if empty
  if (fs.existsSync(alliesDir)) {
    partnerLogos = fs.readdirSync(alliesDir).filter(file => file.endsWith('.png'));
  }
} catch (error) {
  console.error("Error reading allies directory:", error);
}
// ---------------------------
---

<Layout title="Asesoramiento Financiero | Inicio">
  
  <main class="hero">
    <div class="container">
      <div class="text-content">
        <span class="subtitle">Estrategia & Patrimonio</span>
        <h1>El Futuro de sus Finanzas, <span class="highlight">Hoy.</span></h1>
        <p>
          Brindamos soluciones de inversión a medida, combinando análisis de datos 
          con una visión estratégica del mercado local e internacional.
        </p>
        <a href="#contacto" class="btn-primary">Agendar Consulta</a>
      </div>
      <div class="image-content">
        <img src="/headshot.jpg" alt="Asesor Financiero" class="profile-pic" />
      </div>
    </div>
  </main>

  <section class="allies">
    <div class="container">
      <h2>Nuestros Aliados</h2>
      
      <div class="logos-grid">
        {partnerLogos.length > 0 ? (
          partnerLogos.map((logo) => {
            const allyLinks = {
              "Hallway-black.png": "https://www.hallway.com.ar",
              "ib-logo-stacked.png": "https://www.interactivebrokers.com",
              "inviu.png": "https://www.inviu.com.ar"
            };
            const link = allyLinks[logo as keyof typeof allyLinks] || "#"; // Fallback to '#' if link not found

            return (
              <a href={link} target="_blank" rel="noopener noreferrer" class="logo-item">
                <img src={`/allies/${logo}`} alt="Aliado Estratégico" loading="lazy" />
              </a>
            );
          })
        ) : (
          <p class="placeholder-text">Aliados estratégicos de primer nivel.</p>
        )}
      </div>

    </div>
  </section>

  <section class="testimonials">
    <div class="container">
      <h2>Qué Dicen Nuestros Clientes</h2>
      <div class="testimonial-grid">
        <div class="testimonial-card">
          <p class="quote">“Gracias al equipo de AlfredInvierte por la seguridad de no estar dejando mis ahorros estancados y acompañarme en el proceso.”</p>
          <span class="author">Bianca B. - Cientifica de datos</span>
        </div>
        <div class="testimonial-card">
          <p class="quote">“El análisis de mercado que recibo es fundamental para tomar decisiones. Un servicio profesional y personalizado.”</p>
          <span class="author">Pedro S. - Periodista</span>
        </div>
      </div>
    </div>
  </section>

  <section id="contacto" class="contact">
    <div class="container">
      
      <div class="form-wrapper">
        <div class="form-header">
          <h2>Reciba Nuestro Análisis Semanal</h2>
          <p>Déjenos su contacto para recibir una muestra gratuita de nuestros reportes de mercado.</p>
        </div>
        
        <form name="leads" method="POST" data-netlify="true">
          <div class="form-group">
            <label for="nombre">Nombre Completo</label>
            <input type="text" id="nombre" name="nombre" required placeholder="Ej. Juan Pérez" />
          </div>
          
          <div class="form-group">
            <label for="email">Correo Electrónico</label>
            <input type="email" id="email" name="email" required placeholder="juan@ejemplo.com" />
          </div>

          <button type="submit" class="btn-submit">Solicitar Informe</button>
        </form>
      </div>

    </div>
  </section>

</Layout>

<style>
  /* --- GENERAL LAYOUT --- */
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* --- HERO SECTION --- */
  .hero {
    padding: 80px 0;
    display: flex;
    align-items: center;
    background-color: var(--white);
  }
  
  .hero .container {
    display: flex;
    align-items: center;
    gap: 50px;
    flex-wrap: wrap;
  }

  .text-content {
    flex: 1;
    position: relative;
  }
  .image-content { flex: 1; display: flex; justify-content: center; }

  .deco-arrow {
    position: absolute;
    width: 150px;
    height: auto;
    opacity: 0.5;
  }
  .arrow-left {
    top: -20px;
    left: -40px;
    transform: rotate(-15deg);
  }
  .arrow-right {
    bottom: 0px;
    right: -20px;
    transform: rotate(15deg);
  }

  h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    margin-bottom: 20px;
    color: var(--black);
  }

  .highlight { color: var(--blue); }
  
  .subtitle {
    display: block;
    color: var(--red);
    font-weight: bold;
    letter-spacing: 1px;
    margin-bottom: 10px;
    text-transform: uppercase;
  }

  .profile-pic {
    width: 300px;
    height: 300px;
    object-fit: cover;
    border-radius: 50%;
    border: 5px solid white;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .btn-primary {
    display: inline-block;
    background-color: var(--blue);
    color: var(--white);
    padding: 15px 30px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    margin-top: 20px;
    transition: background 0.3s;
  }
  
  .btn-primary:hover { background-color: var(--black); }

  /* --- TESTIMONIALS SECTION --- */
  .testimonials {
    background-color: var(--white);
    padding: 80px 0;
    text-align: center;
  }
  .testimonials h2 {
    color: var(--black);
    margin-bottom: 50px;
  }
  .testimonial-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    text-align: left;
  }
  .testimonial-card {
    background-color: #f9f9f9;
    padding: 30px;
    border-radius: 8px;
    border-left: 5px solid var(--blue);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
  }
  .quote {
    font-style: italic;
    color: #555;
    margin-bottom: 20px;
    line-height: 1.6;
  }
  .author {
    font-weight: bold;
    color: var(--black);
  }

  /* --- ALLIES SECTION --- */
  .allies {
    background-color: #333; /* Lighter shade of black */
    color: var(--white);
    padding: 60px 0;
    text-align: center;
  }

  .allies h2 { margin-bottom: 20px; color: var(--white); }

  .logos-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
    margin-top: 30px;
  }

  .logo-item img {
    height: 100px; /* Increased height */
    width: auto;
    object-fit: contain;
    opacity: 1;
    transition: transform 0.3s ease-in-out; /* Added transition for smooth effect */
  }

  .logo-item {
    transition: transform 0.3s ease-in-out, filter 0.3s ease-in-out;
    filter: grayscale(100%);
  }

  .logo-item:hover {
    transform: scale(1.1);
    filter: grayscale(0%);
  }

  .logo-item.move-left {
    transform: translateX(-40px);
  }
  .logo-item.move-right {
    transform: translateX(40px);
  }

  .placeholder-text { color: rgba(255,255,255,0.5); font-style: italic; }

  /* --- CONTACT SECTION (THE BOX) --- */
  .contact {
    padding: 80px 0;
    /* Use the user's off-white for the section background */
    background-color: var(--white); 
  }

  .form-wrapper {
    max-width: 600px;
    margin: 0 auto;
    /* Force PURE white for the box so it stands out against the off-white background */
    background-color: #ffffff; 
    padding: 40px;
    border-radius: 8px;
    /* Strong shadow to create the "card" effect */
    box-shadow: 0 10px 30px rgba(0,0,0,0.15); 
    border-top: 5px solid var(--red);
  }

  .form-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .form-header h2 {
    font-size: 2rem;
    margin-bottom: 10px;
    color: var(--black);
  }

  .form-group { margin-bottom: 20px; }
  
  label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
    font-size: 0.9rem;
    color: var(--black);
  }

  input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc; /* Light grey border */
    border-radius: 4px;
    font-family: var(--font-body);
    font-size: 1rem;
    box-sizing: border-box; /* Ensures padding doesn't break width */
  }

  /* Input focus state */
  input:focus {
    outline: none;
    border-color: var(--blue);
    box-shadow: 0 0 0 3px rgba(33, 137, 206, 0.1);
  }

  .btn-submit {
    width: 100%;
    background-color: var(--red);
    color: white;
    border: none;
    padding: 15px;
    font-weight: bold;
    cursor: pointer;
    font-size: 1rem;
    border-radius: 4px;
    transition: background 0.3s ease;
  }
  
  .btn-submit:hover { 
    background-color: var(--black); 
  }

  @media (max-width: 768px) {
    h1 { font-size: 2.5rem; }
    .hero .container { flex-direction: column-reverse; text-align: center; }
    .form-wrapper { padding: 20px; }
  }
</style>

<script>
  const logos = document.querySelectorAll('a.logo-item');

  logos.forEach(logo => {
    logo.addEventListener('mouseenter', () => {
      let prev = logo.previousElementSibling;
      let next = logo.nextElementSibling;

      if (prev) {
        prev.classList.add('move-left');
      }
      if (next) {
        next.classList.add('move-right');
      }
    });

    logo.addEventListener('mouseleave', () => {
      let prev = logo.previousElementSibling;
      let next = logo.nextElementSibling;

      if (prev) {
        prev.classList.remove('move-left');
      }
      if (next) {
        next.classList.remove('move-right');
      }
    });
  });
</script>