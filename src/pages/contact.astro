---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto | Asesoramiento Financiero">
  <main class="contact-page">
    <div class="container">
      <div class="page-header">
        <span class="subtitle">Hablemos</span>
        <h1>Póngase en Contacto</h1>
        <p>
          Complete el formulario para agendar una consulta o utilice la información de contacto para comunicarse directamente.
        </p>
      </div>

      <div class="contact-layout">
        <div class="form-container">
          <form name="contact" method="POST" data-netlify="true">
            <div class="form-group">
              <label for="name">Nombre</label>
              <input type="text" id="name" name="name" required />
            </div>
            <div class="form-group">
              <label for="email">Correo Electrónico</label>
              <input type="email" id="email" name="email" required />
            </div>
            <div class="form-group">
              <label for="phone">Teléfono</label>
              <input type="tel" id="phone" name="phone" required/>
            </div>
            <div class="form-group">
              <label for="message">Mensaje</label>
              <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn-primary">Enviar Mensaje</button>
          </form>
        </div>

        <div class="info-container">
          <div class="info-block">
            <h3>Información de Contacto</h3>
            <p>
              <strong>Email:</strong><br/>
              <a href="mailto:alfredo.sampron@hallway.com.ar">alfredo.sampron@hallway.com.ar</a>
            </p>
            <p>
              <strong>Teléfono:</strong><br/>
              +54 9 11 5326-4338
            </p>
            <p>
              <strong>Horario:</strong><br/>
              Lunes a Viernes, 9am - 6pm
            </p>
          </div>
          <div class="info-block">
            <h3>Oficina</h3>
            <p>
              Alicia Moreau de Justo 740, Piso 3 – oficina 21.<br/>
              CABA, Argentina
            </p>
            <p><em>Reuniones solo con cita previa.</em></p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .contact-page {
    padding: 60px 0;
    background-color: var(--white);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .subtitle {
    display: block;
    color: var(--red);
    font-weight: bold;
    letter-spacing: 1px;
    margin-bottom: 10px;
    text-transform: uppercase;
  }

  h1 { font-size: 3rem; color: var(--black); }
  
  .page-header p {
    max-width: 700px;
    margin: 15px auto 0;
    color: #555;
    font-size: 1.1rem;
  }

  .contact-layout {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 50px;
  }

  .form-container {
    background: #ffffff;
    padding: 40px;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }
  
  .form-group { margin-bottom: 20px; }
  
  label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
    color: var(--black);
  }

  input, textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-family: var(--font-body);
    font-size: 1rem;
    box-sizing: border-box;
  }
  
  input:focus, textarea:focus {
    outline: none;
    border-color: var(--blue);
    box-shadow: 0 0 0 3px rgba(33, 137, 206, 0.1);
  }
  
  .btn-primary {
    width: 100%;
    background-color: var(--red);
    color: white;
    border: none;
    padding: 15px;
    font-weight: bold;
    cursor: pointer;
    font-size: 1rem;
    border-radius: 4px;
    transition: background 0.3s ease;
  }
  .btn-primary:hover { background-color: var(--black); }

  .info-container {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .info-block {
    background: #f9f9f9;
    padding: 25px;
    border-radius: 8px;
    border-left: 4px solid var(--blue);
  }

  .info-block h3 {
    font-size: 1.4rem;
    margin-bottom: 15px;
    color: var(--black);
  }

  .info-block p {
    line-height: 1.7;
    color: #333;
  }
  
  .info-block a {
    color: var(--blue);
    text-decoration: none;
  }
  .info-block a:hover { text-decoration: underline; }

  @media (max-width: 992px) {
    .contact-layout {
      grid-template-columns: 1fr;
    }
    .info-container {
      margin-top: 40px;
    }
  }
</style>
