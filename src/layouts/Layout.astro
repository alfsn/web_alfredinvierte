---
// Import the fonts we just installed so they are available globally
import '@fontsource/anton';
import '@fontsource/montserrat';

interface Props {
	title: string;
}

const { title } = Astro.props;

// Define your Color Palette here for easy usage
const colors = {
  white: "#f4f8fb",
  black: "#1d1d1b",
  blue: "#2189ce",
  red: "#FA4D51"
};
---

<!doctype html>
<html lang="es-AR"> <head>
		<meta charset="UTF-8" />
		<meta name="description" content="Asesoramiento financiero profesional." />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot /> </body>
</html>

<style is:global define:vars={{ ...colors }}>
  /* Global CSS Reset & Variables */
  :root {
    --font-title: 'Anton', sans-serif;
    --font-body: 'Montserrat', sans-serif;
  }
  
  html {
    background: var(--white);
    color: var(--black);
    font-family: var(--font-body);
  }

  /* Force all headings to use Anton and be Uppercase */
  h1, h2, h3 {
    font-family: var(--font-title);
    text-transform: uppercase;
    margin: 0;
  }

  body {
    margin: 0;
    padding: 0;
    line-height: 1.6;
  }
</style>