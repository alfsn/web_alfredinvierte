---
// Import the fonts we just installed so they are available globally
import '@fontsource/anton';
import '@fontsource/montserrat';

interface Props {
	title: string;
}

const { title } = Astro.props;

// Define your Color Palette here for easy usage
const colors = {
  white: "#f4f8fb",
  black: "#1d1d1b",
  blue: "#2189ce",
  red: "#FA4D51"
};
---

<!doctype html>
<html lang="es-AR"> <head>
		<meta charset="UTF-8" />
		<meta name="description" content="Asesoramiento financiero profesional." />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/png" href="/graphics/tipo AI.png" />
		<title>{title}</title>
	</head>
	<body>
    <header class="site-header">
      <div class="container">
        <a href="/" class="logo">
          <img src="/graphics/Imagotipo AI - Color(1).png" alt="Alfredo Sampron Imagotipo" />
        </a>
        <button class="hamburger" aria-label="Menu">
          <svg class="icon-menu" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
          <svg class="icon-close" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
        </button>
        <div class="nav-links">
          <nav>
            <a href="/">Inicio</a>
            <a href="/about">Sobre MÃ­</a>
            <a href="/blog">Blog</a>
            <a href="/allies">Aliados</a>
            <a href="/contact">Contacto</a>
          </nav>
        </div>
      </div>
    </header>
		<slot />
    <footer class="site-footer">
      <div class="container">
        <img src="/graphics/tipo AI.png" alt="Alfredo Sampron Logo" class="footer-logo" />
        <p>&copy; {new Date().getFullYear()} Alfredo Sampron. Todos los derechos reservados.</p>
        <div class="social-links">
          <a href="https://www.instagram.com/alfredinvierte" target="_blank">Instagram</a>
          <a href="https://www.twitter.com/alfredinvierte" target="_blank">Twitter</a>
        </div>
      </div>
    </footer>
  </body>
</html>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.querySelector('.hamburger');
    const siteHeader = document.querySelector('.site-header');

    hamburger.addEventListener('click', () => {
      siteHeader.classList.toggle('nav-open');
    });
  });
</script>

<style is:global define:vars={{ ...colors }}>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* Global CSS Reset & Variables */
  :root {
    --font-title: 'Anton', sans-serif;
    --font-body: 'Montserrat', sans-serif;
  }
  
  html,
  body {
    width: 100%;
    overflow-x: hidden;
  }

  html {
    background: var(--white);
    color: var(--black);
    font-family: var(--font-body);
  }

  /* Force all headings to use Anton and be Uppercase */
  h1, h2, h3 {
    font-family: var(--font-title);
    text-transform: uppercase;
    margin: 0;
  }

  body {
    margin: 0;
    padding: 0;
    line-height: 1.6;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  /* --- HEADER & NAVIGATION --- */
  .site-header {
    background: var(--white);
    padding: 20px 0;
    border-bottom: 1px solid #e0e0e0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .site-header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo img {
    height: 120px;
    width: auto;
  }

  .nav-links nav {
    display: flex;
    gap: 25px;
  }

  nav a {
    text-decoration: none;
    color: var(--black);
    font-weight: bold;
    padding-bottom: 5px;
    border-bottom: 2px solid transparent;
    transition: border-color 0.3s, color 0.3s;
  }

  nav a:hover {
    color: var(--blue);
    border-bottom-color: var(--blue);
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
    z-index: 1001;
  }

  .hamburger .icon-close {
    display: none;
  }

  .site-header.nav-open .hamburger .icon-menu {
    display: none;
  }

  .site-header.nav-open .hamburger .icon-close {
    display: block;
  }

  /* --- FOOTER --- */
  .site-footer {
    background: var(--black);
    color: var(--white);
    padding: 30px 0;
    text-align: center;
    margin-top: auto;
  }

  .site-footer .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }
  
  .footer-logo {
    height: 50px;
    width: auto;
    margin-bottom: 10px;
  }

  .social-links a {
    color: var(--white);
    text-decoration: none;
    margin: 0 10px;
    font-weight: bold;
  }

  .social-links a:hover {
    text-decoration: underline;
  }

  /* --- MOBILE STYLES --- */
  @media (max-width: 768px) {
    .logo img {
      height: 80px; /* Adjust logo height for smaller screens */
    }

    .hamburger {
      display: block;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--white);
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    .site-header.nav-open .nav-links {
      display: block;
    }

    .nav-links nav {
      flex-direction: column;
      align-items: center;
      padding: 20px;
      gap: 20px;
    }
  }
</style>